                        <vc:DataPoint AxisXLabel="Firefox 2.0" YValue="16.30"/>
                        <vc:DataPoint AxisXLabel="Safari 3.0" YValue="4.60"/>
                        <vc:DataPoint AxisXLabel="Safari 4.1" YValue="0.74"/>
                        <vc:DataPoint AxisXLabel="Opera 9.x" YValue="0.70"/>
                        <vc:DataPoint AxisXLabel="Other" YValue="3.05"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</UserControl>
