<vc:Chart xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts"
Width="500" Height="300" Theme="Theme2" Padding="8" BorderBrush="Gray" ScrollingEnabled="False">

  <vc:Chart.Titles>
    <vc:Title Text="Visifire DateTime Axis Chart"/>
  </vc:Chart.Titles>

  <vc:Chart.AxesX>
    <vc:Axis IntervalType="Months" Interval="1" ValueFormatString="MMM/d/yyyy"/>
  </vc:Chart.AxesX>

  <vc:Chart.Legends>
    <vc:Legend Enabled="False"/>
