<UserControl x:Class="SLVisifireApp.Area2D4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="500" Height="300" xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts">
    <Grid x:Name="LayoutRoot" Background="White">
        <vc:Chart Theme="Theme3" AnimationEnabled="False" BorderBrush="Gray">

            <vc:Chart.Titles>
                <vc:Title Text="Worldwide Hybrid Vehicle Sales"/>
            </vc:Chart.Titles>
            <vc:Chart.AxesX>
                <vc:Axis Title="Month"/>
            </vc:Chart.AxesX>
            <vc:Chart.AxesY>
                <vc:Axis Title="Units (thousand)"/>
                <vc:Axis AxisType="Secondary" AxisMaximum="60" Title="Percentage Sales" Suffix="%"/>
            </vc:Chart.AxesY>

            <vc:Chart.Legends>
                <vc:Legend BorderColor="Gray" BorderThickness="0.5" FontSize="10" />
            </vc:Chart.Legends>

            <vc:Chart.Series>
                <vc:DataSeries LegendText="2007" AxisYType="Primary" RenderAs="Area" Cursor="Hand">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Jan" YValue="29.3"/>
                        <vc:DataPoint AxisXLabel="Feb" YValue="35.1"/>
                        <vc:DataPoint AxisXLabel="Mar" YValue="51.2"/>
                        <vc:DataPoint AxisXLabel="Apr" YValue="38.2"/>
                        <vc:DataPoint AxisXLabel="May" YValue="57.6"/>
                        <vc:DataPoint AxisXLabel="Jun" YValue="49.8"/>
                        <vc:DataPoint AxisXLabel="Jul" YValue="43.4"/>
                        <vc:DataPoint AxisXLabel="Aug" YValue="36.7"/>
                        <vc:DataPoint AxisXLabel="Sep" YValue="38.2"/>
                        <vc:DataPoint AxisXLabel="Oct" YValue="38.3"/>
                        <vc:DataPoint AxisXLabel="Nov" YValue="40.2"/>
                        <vc:DataPoint AxisXLabel="Dec" YValue="41.1"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>

                <vc:DataSeries LegendText="2006" AxisYType="Primary" RenderAs="Area" Cursor="Hand">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="23.7"/>
                        <vc:DataPoint YValue="22.3"/>
                        <vc:DataPoint YValue="28.7"/>
                        <vc:DataPoint YValue="29.2"/>
                        <vc:DataPoint YValue="38.3"/>
                        <vc:DataPoint YValue="32.2"/>
                        <vc:DataPoint YValue="30.1"/>
                        <vc:DataPoint YValue="28.1"/>
                        <vc:DataPoint YValue="35.7"/>
                        <vc:DataPoint YValue="31.6"/>
                        <vc:DataPoint YValue="31.2"/>
                        <vc:DataPoint YValue="34.9"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>

                <vc:DataSeries LegendText="Total Percentage Sales" RenderAs="Area" AxisYType="Secondary" ToolTipText="#AxisXLabel, #YValue" Cursor="Hand">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="6.36"/>
                        <vc:DataPoint YValue="6.88"/>
                        <vc:DataPoint YValue="9.58"/>
                        <vc:DataPoint YValue="8.08"/>
                        <vc:DataPoint YValue="11.50"/>
                        <vc:DataPoint YValue="9.84"/>
                        <vc:DataPoint YValue="8.82"/>
                        <vc:DataPoint YValue="7.77"/>
                        <vc:DataPoint YValue="8.86"/>
                        <vc:DataPoint YValue="8.38"/>
                        <vc:DataPoint YValue="8.56"/>
                        <vc:DataPoint YValue="9.12"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>

    </Grid>
</UserControl>
