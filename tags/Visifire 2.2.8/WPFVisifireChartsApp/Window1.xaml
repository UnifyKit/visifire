<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
    WindowState="Normal" Height="369" Width="583">
    <Grid x:Name="LayoutRoot">

        <vc:Chart x:Name="MyChart" Theme="Theme1" Width="500" Height="300">

            <vc:Chart.Series>
                <vc:DataSeries>
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="10" />
                        <vc:DataPoint YValue="20" />
                        <vc:DataPoint YValue="40" />
                        <vc:DataPoint YValue="50" />
                        <vc:DataPoint YValue="30" />
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</Window>

              