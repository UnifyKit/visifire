<UserControl x:Class="SLVisifireApp.Column2D4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="500" Height="300" xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts">
    <Grid x:Name="LayoutRoot" Background="White">
        <vc:Chart Theme="Theme1" BorderBrush="Black" Padding="8">

            <vc:Chart.Titles>
                <vc:Title Text="Visifire MultiSeries Column Chart" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </vc:Chart.Titles>

            <vc:Chart.AxesY>
                <vc:Axis Prefix="$"/>
            </vc:Chart.AxesY>

            <vc:Chart.Legends>
                <vc:Legend x:Name="Legend1" FontSize="12"/>
            </vc:Chart.Legends>

            <vc:Chart.Series>
                <vc:DataSeries LegendText="2005" RenderAs="Column" Cursor="Hand" Legend="Legend1">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Jan" YValue="5509" />
                        <vc:DataPoint AxisXLabel="Feb" YValue="7047" />
                        <vc:DataPoint AxisXLabel="Mar" YValue="10047" />
                        <vc:DataPoint AxisXLabel="Apr" YValue="8508" />
                        <vc:DataPoint AxisXLabel="May" YValue="6022" />
                        <vc:DataPoint AxisXLabel="June" YValue="9047" />
                        <vc:DataPoint AxisXLabel="July" YValue="7508" />
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
                <vc:DataSeries LegendText="2006" RenderAs="Column" Cursor="Hand" Legend="Legend1">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="7768" />
                        <vc:DataPoint YValue="9094" />
                        <vc:DataPoint YValue="11580" />
                        <vc:DataPoint YValue="9795" />
                        <vc:DataPoint YValue="10646" />
                        <vc:DataPoint YValue="10080" />
                        <vc:DataPoint YValue="9795" />
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>

    </Grid>
</UserControl>
