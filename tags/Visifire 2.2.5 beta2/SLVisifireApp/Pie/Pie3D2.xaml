<UserControl x:Class="SLVisifireApp.Pie3D2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="500" Height="300" xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts">
    <Grid x:Name="LayoutRoot" Background="White">
        <vc:Chart Theme="Theme2" View3D="True" BorderBrush="Gray">

            <vc:Chart.Titles>
                <vc:Title Text="Screen Resolutions Market Share"/>
            </vc:Chart.Titles>

            <vc:Chart.Legends>
                <vc:Legend x:Name="Legend1" EntryMargin="6" LabelMargin="5" FontSize="10"/>
            </vc:Chart.Legends>

            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Pie" Cursor="Hand" Legend="Legend1" LabelLineStyle="Dashed" LabelLineColor="Black">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="1280 X 800" YValue="15.27"/>
                        <vc:DataPoint AxisXLabel="1024 X 768" YValue="43.58"/>
                        <vc:DataPoint AxisXLabel="1280 X 1024" YValue="13.31"/>
                        <vc:DataPoint AxisXLabel="800 X 600" YValue="6.55"/>
                        <vc:DataPoint AxisXLabel="1440 X 900" YValue="5.96"/>
                        <vc:DataPoint AxisXLabel="Other" YValue="15.47"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</UserControl>
