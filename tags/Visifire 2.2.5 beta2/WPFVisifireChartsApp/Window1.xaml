<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
    WindowState="Normal" >
    <Grid x:Name="LayoutRoot">
        <vc:Chart Width="500" Height="300" Theme="Theme2" x:Name="MyChart">

            <vc:Chart.Titles>
                <vc:Title Text="Visifire Chart"/>
            </vc:Chart.Titles>

            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Column">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint XValue="1" YValue="10"/>
                        <vc:DataPoint XValue="2" YValue="22"/>
                        <vc:DataPoint XValue="3" YValue="20"/>
                        <vc:DataPoint XValue="4" YValue="30"/>
                        <vc:DataPoint XValue="5" YValue="8"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>

            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
    
</Window>
