<UserControl x:Class="SLVisifireApp.Line6"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="500" Height="300" xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts">
    <Grid x:Name="LayoutRoot" Background="White">
        <vc:Chart Theme="Theme3" AnimationEnabled="False">

            <vc:Chart.Titles>
                <vc:Title Text="Milk Production by World Region"/>
            </vc:Chart.Titles>
            
            <vc:Chart.AxesX>
                <vc:Axis Interval="1" Title="Year">
                    <vc:Axis.AxisLabels>
                        <vc:AxisLabels Angle="-30"/>
                    </vc:Axis.AxisLabels>
                </vc:Axis>
            </vc:Chart.AxesX>
            
            <vc:Chart.AxesY>
                <vc:Axis Title="Production (million tonnes)"/>
            </vc:Chart.AxesY>

            <vc:Chart.Legends>
                <vc:Legend x:Name="Legend1" Background="Black" LightingEnabled="False" FontSize="10"/>
            </vc:Chart.Legends>
            
            <vc:Chart.Series>
                <vc:DataSeries LegendText="Africa" Legend="Legend1" RenderAs="Line" MarkerSize="8" LineThickness="4" Cursor="Hand">
