                        <vc:DataPoint AxisXLabel="2007" YValue="46.5"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>

                <vc:DataSeries LegendText="North America" Legend="Legend1" RenderAs="Line" MarkerType="Triangle" MarkerSize="8" LineThickness="4" Cursor="Hand">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="78.9"/>
                        <vc:DataPoint YValue="79.5"/>
                        <vc:DataPoint YValue="82.1"/>
                        <vc:DataPoint YValue="85.9"/>
                        <vc:DataPoint YValue="83.2"/>
