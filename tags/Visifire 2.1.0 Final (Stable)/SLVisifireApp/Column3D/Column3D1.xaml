<UserControl x:Class="SLVisifireApp.Column3D1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="500" Height="300" xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts">
    <Grid x:Name="LayoutRoot" Background="White">
        <vc:Chart Theme="Theme1" AnimationEnabled="False" View3D="True" BorderBrush="Gray">

            <vc:Chart.Titles>
                <vc:Title Text="Visifire 3D Column Chart" Padding="3"/>
            </vc:Chart.Titles>
          
            <vc:Chart.AxesY>
                <vc:Axis LineThickness="0"/>
            </vc:Chart.AxesY>
            
            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Column" Cursor="Hand">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Jan" YValue="4000"/>
                        <vc:DataPoint AxisXLabel="Feb" YValue="6500"/>
                        <vc:DataPoint AxisXLabel="Mar" YValue="10500"/>
                        <vc:DataPoint AxisXLabel="Apr" YValue="7600"/>
                        <vc:DataPoint AxisXLabel="May" YValue="5520"/>
                        <vc:DataPoint AxisXLabel="June" YValue="8200"/>
                        <vc:DataPoint AxisXLabel="July" YValue="7500"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</UserControl>
