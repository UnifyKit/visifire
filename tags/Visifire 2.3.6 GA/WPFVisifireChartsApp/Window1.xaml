<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
     WindowState="Maximized"   >

    <Grid x:Name="LayoutRoot">

        <vc:Chart xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts" Width="500" Height="300"
                  Theme="Theme1">

            <vc:Chart.Titles>
                <vc:Title Text="Product Sales" FontSize="12"/>
            </vc:Chart.Titles>

            <vc:Chart.Series>
                <vc:DataSeries>
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Product A" YValue="20"/>
                        <vc:DataPoint AxisXLabel="Product B" YValue="30"/>
                        <vc:DataPoint AxisXLabel="Product C" YValue="50"/>
                        <vc:DataPoint AxisXLabel="Product D" YValue="40"/>
                        <vc:DataPoint AxisXLabel="Product D" YValue="10"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>

            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</Window>