<UserControl x:Class="SLVisifireApp.Pie3D1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="500" Height="300" xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts">
    <Grid x:Name="LayoutRoot" Background="White">
        <vc:Chart Theme="Theme1" AnimationEnabled="True" View3D="True" BorderBrush="Gray">

            <vc:Chart.Titles>
                <vc:Title Text="Web Search Engine Market Share"/>
            </vc:Chart.Titles>

            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Pie" Cursor="Hand" LabelEnabled="True" LabelLineThickness="0.5" Bevel="False">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Yahoo" YValue="16.7" />
                        <vc:DataPoint AxisXLabel="Google" YValue="68.6"/>
                        <vc:DataPoint AxisXLabel="MSN/Live" YValue="8.7"/>
                        <vc:DataPoint AxisXLabel="Ask" YValue="3.7" />
                        <vc:DataPoint AxisXLabel="AOL" YValue="1.7" />
                        <vc:DataPoint AxisXLabel="Others" YValue="0.6" />
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>

        </vc:Chart>
    </Grid>
</UserControl>
