<vc:Chart xmlns:vc="clr-namespace:Visifire.Charts;assembly=Visifire.Charts"
          Theme="Theme2" AnimationType="Type4" Width="350" Height="400" View3D="True">

  <vc:Title Text="Visifire 3D Bar Chart"/>
  <vc:AxisY InterlacedColor="#f1f1f1"/>

  <vc:DataSeries RenderAs="Bar">
    <vc:DataPoint AxisLabel="Jan" YValue="150"/>
    <vc:DataPoint AxisLabel="Mar" YValue="200"/>
    <vc:DataPoint AxisLabel="May" YValue="250"/>
    <vc:DataPoint AxisLabel="Jul" YValue="300"/>
    <vc:DataPoint AxisLabel="Aug" YValue="350"/>
    <vc:DataPoint AxisLabel="Oct" YValue="390"/>
  </vc:DataSeries>

</vc:Chart>