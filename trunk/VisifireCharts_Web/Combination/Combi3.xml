    <vc:DataPoint AxisLabel="China" YValue="180"/>
    <vc:DataPoint AxisLabel="Russia" YValue="126"/>
  </vc:DataSeries>

  <vc:DataSeries Name="2001" RenderAs="Bubble" MarkerScale="0.8" ToolTipText="Production: #YValue, Reserves: #ZValue">
