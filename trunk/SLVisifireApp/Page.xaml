<UserControl  xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" x:Class="SLVisifireApp.Page"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts"

>
    <Grid x:Name="LayoutRoot" Height="Auto" Width="Auto">
        <vc:Chart xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts" Width="500" Height="300"
                  Theme="Theme1">

            <vc:Chart.Titles>
                <vc:Title Text="Product Sales" FontSize="12"/>
            </vc:Chart.Titles>

            <vc:Chart.Series>
                <vc:DataSeries>
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Product A" YValue="20"/>
                        <vc:DataPoint AxisXLabel="Product B" YValue="30"/>
                        <vc:DataPoint AxisXLabel="Product C" YValue="50"/>
                        <vc:DataPoint AxisXLabel="Product D" YValue="40"/>
                        <vc:DataPoint AxisXLabel="Product D" YValue="10"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>

            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</UserControl>
  