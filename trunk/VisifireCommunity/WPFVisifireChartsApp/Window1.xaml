<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
    Title="PerfMon">
     
    <Grid x:Name="LayoutRoot" Width="400" Height="300">
        <vc:Chart Name="MyChart" Theme="Theme1" Width="400" Height="300">

            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Column">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="10"/>
                        <vc:DataPoint YValue="15"/>
                        <vc:DataPoint YValue="20"/>
                        <vc:DataPoint YValue="12"/>
                        <vc:DataPoint YValue="18"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
        
        <!--<vc:Chart Name="chart" Grid.Row="1" Grid.Column="0" Watermark="False">
        </vc:Chart>-->
    </Grid>
</Window>
