<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
    >
  
    <Grid x:Name="LayoutRoot" Background="White">

        <vc:Chart Width="500" Height="300" Theme="Theme1">

            <vc:Chart.Titles>
                <vc:Title Text="Visifire Area Chart" FontSize="12"/>
            </vc:Chart.Titles>

            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Column">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Jan" YValue="2020"/>
                        <vc:DataPoint AxisXLabel="Feb" YValue="1562"/>
                        <vc:DataPoint AxisXLabel="Mar" YValue="3282"/>
                        <vc:DataPoint AxisXLabel="Apr" YValue="3098"/>
                        <vc:DataPoint AxisXLabel="May" YValue="5000"/>
                        <vc:DataPoint AxisXLabel="June" YValue="2486"/>
                        <vc:DataPoint AxisXLabel="July" YValue="1034"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</Window>
