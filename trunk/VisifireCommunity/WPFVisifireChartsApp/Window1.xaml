<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
    Title="PerfMon">   
    
    <Grid x:Name="LayoutRoot" Width="500" Height="300" Background="Gray">

        <vc:Chart Name="MyChart" Theme="Theme1" Width="500" Height="300">

            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Column">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="25"/>
                        <vc:DataPoint YValue="35"/>
                        <vc:DataPoint YValue="28"/>
                        <vc:DataPoint YValue="75"/>
                        <vc:DataPoint YValue="17"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>

    </Grid>
</Window>
