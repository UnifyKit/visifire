<Window x:Class="WPFVisifireChartsApp.Window1"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts" Height="500" Width="683">

    <Grid x:Name="LayoutRoot">

        <vc:Chart x:Name="MyChart" Theme="Theme1" BorderBrush="Gray" Height="400" Width="400" View3D="false" Padding="4">

            <vc:Chart.Titles>
                <vc:Title Text="Calls made by sales team on 12 August 2010" FontSize="16" />
                <vc:Title Text="Total Number Of Calls: 199" FontSize="16" />
            </vc:Chart.Titles>

            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Pyramid" LabelLineColor="Black" ShadowEnabled="true" Bevel="False" LabelText="#AxisXLabel, NOC: #YValue, #Percentage%" >
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="John" YValue="42" />
                        <vc:DataPoint AxisXLabel="Neil" YValue="31"/>
                        <vc:DataPoint AxisXLabel="Steve" YValue="30"/>
                        <vc:DataPoint AxisXLabel="David" YValue="52"/>
                        <vc:DataPoint AxisXLabel="Maria" YValue="38"/>
                        <vc:DataPoint AxisXLabel="Mike" YValue="6"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</Window>