<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts" Height="362" Width="683">
  
    <Grid x:Name="LayoutRoot">
        <vc:Chart xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
                 x:Name="MyChart" Width="500" Height="300" Theme="Theme1">

            <vc:Chart.Titles>
                <vc:Title Text="Visifire Radar Chart"/>
            </vc:Chart.Titles>

            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Radar">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Jan" YValue="20"/>
                        <vc:DataPoint AxisXLabel="Feb" YValue="18"/>
                        <vc:DataPoint AxisXLabel="Mar" YValue="28"/>
                        <vc:DataPoint AxisXLabel="Apr" YValue="22"/>
                        <vc:DataPoint AxisXLabel="May" YValue="32"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>

    </Grid>
</Window>
