<UserControl x:Class="SLVisifireApp.Line3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="500" Height="300" xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts">
    <Grid x:Name="LayoutRoot" Background="White">
        <vc:Chart Theme="Theme1" AnimationEnabled="False" BorderBrush="Gray">

            <vc:Chart.Titles>
                <vc:Title Text="US Market Share for Auto Sales"/>
            </vc:Chart.Titles>
            <vc:Chart.AxesX>
                <vc:Axis Title="Month"/>
            </vc:Chart.AxesX>
            <vc:Chart.AxesY>
                <vc:Axis Title="Market Share" Suffix="%"/>
            </vc:Chart.AxesY>

            <vc:Chart.Series>
                <vc:DataSeries LegendText="GM" RenderAs="Line" Cursor="Hand" LineThickness="4" MarkerScale="1.2">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Feb" YValue="25"/>
                        <vc:DataPoint AxisXLabel="Mar" YValue="22"/>
                        <vc:DataPoint AxisXLabel="Apr" YValue="23"/>
                        <vc:DataPoint AxisXLabel="May" YValue="24"/>
                        <vc:DataPoint AxisXLabel="Jun" YValue="22"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>

                <vc:DataSeries LegendText="Ford" RenderAs="Line" Cursor="Hand" LineThickness="4" MarkerScale="1.2">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="15.5"/>
                        <vc:DataPoint YValue="16"/>
                        <vc:DataPoint YValue="16"/>
                        <vc:DataPoint YValue="15"/>
                        <vc:DataPoint YValue="16"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>

                <vc:DataSeries LegendText="Toyota" RenderAs="Line" Cursor="Hand" LineThickness="4" MarkerScale="1.2">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="14.5"/>
                        <vc:DataPoint YValue="15"/>
                        <vc:DataPoint YValue="16"/>
                        <vc:DataPoint YValue="18"/>
                        <vc:DataPoint YValue="17.5"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>

                <vc:DataSeries LegendText="Chrysler LLC" RenderAs="Line" Cursor="Hand" LineThickness="4" MarkerScale="1.2">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="13.5"/>
                        <vc:DataPoint YValue="13"/>
                        <vc:DataPoint YValue="14"/>
                        <vc:DataPoint YValue="12"/>
                        <vc:DataPoint YValue="12"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>

                <vc:DataSeries LegendText="Honda" RenderAs="Line" Cursor="Hand" LineThickness="4">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="9"/>
                        <vc:DataPoint YValue="9.5"/>
                        <vc:DataPoint YValue="9.5"/>
                        <vc:DataPoint YValue="9.5"/>
                        <vc:DataPoint YValue="10"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</UserControl>
