<UserControl x:Class="SLVisifireApp.Page"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts"
Width="500" Height="330"
>

    <Grid x:Name="LayoutRoot" Background="White" Width="500" Height="330">
        <vc:Chart Name="MyChart" xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts"
                  Theme="Theme1">

            <vc:Chart.Titles>
                <vc:Title Text="Visifire with broken Line Chart" />
            </vc:Chart.Titles>
            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Line" AxisYType="Primary" >
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Jan" YValue="20" />
                        <vc:DataPoint AxisXLabel="Feb" YValue="28" />
                        <vc:DataPoint AxisXLabel="Mar" YValue="20" />
                        <vc:DataPoint AxisXLabel="Apr" YValue="28" />
                        <vc:DataPoint AxisXLabel="May" YValue="" />
                        <vc:DataPoint AxisXLabel="Jun" YValue="28" />
                        <vc:DataPoint AxisXLabel="Jul" YValue="12" />
                        <vc:DataPoint AxisXLabel="Aug" YValue="30" />
                        <vc:DataPoint AxisXLabel="Sep" YValue="18" />
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>

    </Grid>

</UserControl>