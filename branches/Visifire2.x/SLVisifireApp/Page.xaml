<UserControl x:Class="SLVisifireApp.Page"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts"
Width="Auto" Height="Auto"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
>   
    <Grid x:Name="LayoutRoot" HorizontalAlignment="Stretch" Background="White" Height="300" Width="500" VerticalAlignment="Stretch">
        <vc:Chart Theme="Theme1" x:Name="MyChart">

            <vc:Chart.AxesX>
                <vc:Axis IntervalType="Months" Interval="1"/>
            </vc:Chart.AxesX>
            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Column">
                        <vc:DataSeries.DataPoints>
                            <vc:DataPoint XValue="1/1/2007" YValue="42"/>
                            <vc:DataPoint XValue="2/2/2007" YValue="14"/>
                            <vc:DataPoint XValue="3/1/2007" YValue="28"/>
                            <vc:DataPoint XValue="4/2/2007" YValue="18"/>
                            <vc:DataPoint XValue="5/3/2007" YValue="32"/>
                        </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>

    </Grid>
</UserControl>

    
