<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="456" Width="676" Background="#FFD9CDCD"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts" 
        WindowState="Normal">
   
    <Grid x:Name="LayoutRoot" Background="White">
        <vc:Chart Name="MyChart" xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
                          Theme="Theme1">

            <vc:Chart.Titles>
                <vc:Title Text="Visifire with broken Line Chart" />
            </vc:Chart.Titles>
            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Line" AxisYType="Primary" >
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Jan" YValue="20" />
                        <vc:DataPoint AxisXLabel="Feb" YValue="28" />
                        <vc:DataPoint AxisXLabel="Mar" YValue="20" />
                        <vc:DataPoint AxisXLabel="Apr" YValue="28" />
                        <vc:DataPoint AxisXLabel="May" YValue="" />
                        <vc:DataPoint AxisXLabel="Jun" YValue="28" />
                        <vc:DataPoint AxisXLabel="Jul" YValue="12" />
                        <vc:DataPoint AxisXLabel="Aug" YValue="30" />
                        <vc:DataPoint AxisXLabel="Sep" YValue="18" />
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
        
    </Grid>
</Window>
