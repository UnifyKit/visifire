<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
    WindowState="Normal" Height="350" Width="600">

    <Grid x:Name="LayoutRoot">


        <vc:Chart Width="500" Height="300" Theme="Theme2" BorderBrush="Gray" View3D="false">

            <vc:Chart.Titles>
                <vc:Title Text="Visifire Multilingual Chart"/>
            </vc:Chart.Titles>

            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Column" SelectionEnabled="True">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="Jan" YValue="60"/>
                        <vc:DataPoint AxisXLabel="Februar" YValue="30"/>
                        <vc:DataPoint AxisXLabel="Mars" YValue="68"/>
                        <vc:DataPoint AxisXLabel="Abril" YValue="75"/>
                        <vc:DataPoint AxisXLabel="Dürfen" YValue="90"/>
                        <vc:DataPoint AxisXLabel="Giugno" YValue="50"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</Window>
