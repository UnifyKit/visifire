<Page x:Class="WPFVisifireChartsXbap.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Page1" Background="#FFD6D6D6" 
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts" 
    >
    <Page.Resources>
        <Style x:Key="ChartStyle" TargetType="{x:Type vc:Chart}">
            <Setter Property="Bevel" Value="True"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Gray" Offset="0"/>
                        <GradientStop Color="White" Offset=".5"/>
                        <GradientStop Color="#FFB2ADAD" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TitleStyle" TargetType="{x:Type vc:Title}">
            <Setter Property="FontColor" Value="Red"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style x:Key="DataSeriesStyle" TargetType="{x:Type vc:DataSeries}" >
            <Setter Property="Bevel" Value="False"/>
        </Style>
    </Page.Resources>
    <Grid x:Name="LayoutRoot" Height="300" Width="500">

        <vc:Chart Theme="Theme1" Style="{StaticResource ChartStyle}">

            <vc:Chart.Titles>
                <vc:Title Text="Visifire with axis Scale" Style="{StaticResource TitleStyle}"/>
            </vc:Chart.Titles>

                <vc:Chart.AxesX>
                <vc:Axis/>
            </vc:Chart.AxesX>
            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Column" Style="{StaticResource DataSeriesStyle}">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="34"/>
                        <vc:DataPoint YValue="67"/>
                        <vc:DataPoint YValue="34"/>
                        <vc:DataPoint YValue="32"/>
                        <vc:DataPoint YValue="21"/>
                        <vc:DataPoint YValue="23"/>
                        <vc:DataPoint YValue="43"/>
                        <vc:DataPoint YValue="25"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</Page>
