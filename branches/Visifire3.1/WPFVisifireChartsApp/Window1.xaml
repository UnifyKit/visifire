<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
    WindowState="Normal">
    <Grid x:Name="LayoutRoot">
        <vc:Chart Width="500" Height="300" Theme="Theme1" Name="MyChart">
            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Column">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint YValue="1"/>
                        <vc:DataPoint YValue="2"/>
                        <vc:DataPoint YValue="3"/>
                        <vc:DataPoint YValue="4"/>
                        <vc:DataPoint YValue="5"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</Window>

              