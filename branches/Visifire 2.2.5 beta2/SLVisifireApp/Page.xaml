<UserControl xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" x:Class="SLVisifireApp.Page"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts"
Width="Auto" Height="Auto"
>
    <Grid x:Name="LayoutRoot">
        <vc:Chart Width="500" Height="300" Theme="Theme2" x:Name="MyChart">

            <vc:Chart.Titles>
                <vc:Title Text="Visifire Chart"/>
            </vc:Chart.Titles>
            
            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Column">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint XValue="1" YValue="10"/>
                        <vc:DataPoint XValue="2" YValue="22"/>
                        <vc:DataPoint XValue="3" YValue="20"/>
                        <vc:DataPoint XValue="4" YValue="30"/>
                        <vc:DataPoint XValue="5" YValue="8"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
                
            </vc:Chart.Series>
        </vc:Chart>
    </Grid>
</UserControl>