<vc:Chart xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts"
                  Width="500" Height="300" Theme="Theme1" BorderThickness="0.5" BorderBrush="Gray">

  <vc:Chart.Titles>
    <vc:Title Text="Visifire Radar Chart" Padding="0,0,0,5"/>
  </vc:Chart.Titles>

  <vc:Chart.AxesY>
    <vc:Axis>
      <vc:Axis.Ticks>
        <vc:Ticks Enabled="false"/>
      </vc:Axis.Ticks>
    </vc:Axis>
  </vc:Chart.AxesY>

  <vc:Chart.Series>
    <vc:DataSeries RenderAs="Radar">
      <vc:DataSeries.DataPoints>
        <vc:DataPoint AxisXLabel="USA" YValue="20"/>
        <vc:DataPoint AxisXLabel="Japan" YValue="18"/>
        <vc:DataPoint AxisXLabel="Australia" YValue="22"/>
        <vc:DataPoint AxisXLabel="Canada" YValue="20"/>
        <vc:DataPoint AxisXLabel="France" YValue="25"/>
        <vc:DataPoint AxisXLabel="Russia" YValue="22"/>
        <vc:DataPoint AxisXLabel="Asia" YValue="20"/>
      </vc:DataSeries.DataPoints>
    </vc:DataSeries>
  </vc:Chart.Series>
</vc:Chart>