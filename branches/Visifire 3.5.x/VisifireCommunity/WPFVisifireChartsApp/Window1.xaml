<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
    Title="PerfMon">
  
    <Grid x:Name="LayoutRoot" Background="White">

        <vc:Chart xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
                  Width="500" Height="300" Theme="Theme1" BorderThickness="0.5" BorderBrush="Gray">

            <vc:Chart.Titles>
                <vc:Title Text="Visifire Spline Chart"/>
            </vc:Chart.Titles>

            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Spline">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint AxisXLabel="USA" YValue="20"/>
                        <vc:DataPoint AxisXLabel="Japan" YValue="18"/>
                        <vc:DataPoint AxisXLabel="Australia" YValue="22"/>
                        <vc:DataPoint AxisXLabel="Canada" YValue="20"/>
                        <vc:DataPoint AxisXLabel="France" YValue="25"/>
                        <vc:DataPoint AxisXLabel="Russia" YValue="22"/>
                        <vc:DataPoint AxisXLabel="Asia" YValue="20"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>

    </Grid>
</Window>
