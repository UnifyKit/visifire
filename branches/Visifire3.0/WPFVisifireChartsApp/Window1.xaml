<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
    WindowState="Normal">
    
    <Grid x:Name="LayoutRoot" Width="500" Height="300">

        <StackPanel>
            <vc:Chart Width="500" Height="300" Theme="Theme1" x:Name="MyChart1">
                <vc:Chart.AxesX>
                    <vc:Axis IntervalType="Days" Interval="1"/>
                </vc:Chart.AxesX>
            </vc:Chart>
            <vc:Chart Width="500" Height="300" Theme="Theme1" x:Name="MyChart2">
                <vc:Chart.AxesX>
                    <vc:Axis IntervalType="Days" Interval="1"/>
                </vc:Chart.AxesX>
            </vc:Chart>
        </StackPanel>
    </Grid>
    
</Window>
