<Window x:Class="WPFVisifireChartsApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
    >
  
    <Grid x:Name="LayoutRoot" Background="White">

        <vc:Chart Theme="Theme1" x:Name="MyChart" Width="500" Height="300">

            <vc:Chart.Series>
                <vc:DataSeries RenderAs="Column">
                    <vc:DataSeries.DataPoints>
                        <vc:DataPoint XValue="1" YValue="10"/>
                        <vc:DataPoint XValue="2" YValue="20"/>
                        <vc:DataPoint XValue="3" YValue="30"/>
                        <vc:DataPoint XValue="4" YValue="40"/>
                        <vc:DataPoint XValue="5" YValue="50"/>
                        <vc:DataPoint XValue="6" YValue="10"/>
                    </vc:DataSeries.DataPoints>
                </vc:DataSeries>
            </vc:Chart.Series>
        </vc:Chart>

    </Grid>
</Window>
