<vc:Chart Name="MyChart1" xmlns:vc="clr-namespace:Visifire.Charts;assembly=SLVisifire.Charts" Theme="Theme2"
        Width="500" Height="300" AnimatedUpdate="True" ToolBarEnabled="True" IndicatorEnabled="True"
        ZoomingEnabled="false">

  <vc:Chart.Titles>
    <vc:Title Text="Visifire Chart"></vc:Title>
  </vc:Chart.Titles>

  <vc:Chart.PlotArea>
    <vc:PlotArea/>
  </vc:Chart.PlotArea>
  
<vc:Chart.TrendLines>
  <vc:TrendLine Orientation="Vertical"/>
</vc:Chart.TrendLines>
  
  <vc:Chart.Series>
    <vc:DataSeries RenderAs="Column">
      <vc:DataSeries.DataPoints>
        <vc:DataPoint XValue="1" YValue="10"/>
        <vc:DataPoint XValue="2" YValue="20"/>
        <vc:DataPoint XValue="3" YValue="30"/>
        <vc:DataPoint XValue="4" YValue="40"/>
        <vc:DataPoint XValue="5" YValue="50"/>
        <vc:DataPoint XValue="6" YValue="10"/>
      </vc:DataSeries.DataPoints>
    </vc:DataSeries>
  </vc:Chart.Series>

</vc:Chart>