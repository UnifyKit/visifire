<UserControl x:Class="Visifire.Charts.Logger"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <Grid x:Name="LayoutRoot" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <TextBox Height="Auto" Width="Auto" IsReadOnly="True" Text="" TextWrapping="Wrap" x:Name="logger"/>
            </ScrollViewer>
        </Grid>
</UserControl>
